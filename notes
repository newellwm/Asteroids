// add new items in the buffer, check for collision before adding or add in intervals

//boulder
  stats:
    split counter (dec)
    health counter (dec)
    position
    velocity

//ship
  stats:
    health count
    airbrake count
    upgrades?
    pos
    vel
    throttle



on interval  {
 call boulder.newPos
}
on w keypress {
  grab ship pos, vel
  ship.throttle(dir, spd)
}
on q keypres {
  call ship rotate
}
on e keypress {
  call ship rotate
}
on s keypress{
  ship.throttle (dwn)
}
on a keypress{
  call ship.dive(l)
}
on d keypress{
  ship.dive(r)
}



